                
pipeline {
    environment {
    docker = '/usr/local/bin/docker-compose'
  }
    agent any


    tools {
        nodejs 'NodeJS 14'
    }
 
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/omarUSJ/devops23.git']]])  
                sh "ls "
                sh "whoami"
                script {
           		 def npmExecutable = tool name: 'NodeJS 14', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
            		 sh "${npmExecutable}/bin/npm install -g npm yarn"
            		 sh "${npmExecutable}/bin/npm install"
       			 }		
                echo 'Project Cloned'
            }
        }

        stage('Docker Build') {
    agent {
        docker {
            image 'node:14'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    steps {
        echo 'Building..'
        script {
            def dockerExecutable = tool name: 'Docker', type: 'com.cloudbees.jenkins.plugins.docker_tools.DockerTool'
            sh "${dockerExecutable}/bin/docker build -t dockerdevopstest ."
            // Add other Docker commands as needed
        }
        echo 'Running...'
    }
}
        echo 'Running...'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
