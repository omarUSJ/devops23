                
pipeline {
    environment {
    docker = '/usr/local/bin/docker-compose'
  }
    agent any


    tools {
        nodejs 'NodeJS 14'
    }
 
    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/omarUSJ/devops23.git']]])  
                sh "ls "
                sh "whoami"
                script {
           		 def npmExecutable = tool name: 'NodeJS 14', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
            		 sh "${npmExecutable}/bin/npm install -g npm yarn"
            		 sh "${npmExecutable}/bin/npm install"
       			 }		
                echo 'Project Cloned'
            }
        }
        stage('Docker Build') {
		agent {
                docker {
                    image 'node:14'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }        
  
	  steps {
                echo 'Building..'
                script{
                    echo 'Building..'
        script {
            def PAth = sh(script: 'pwd', returnStdout: true).trim()
            sh 'curl -L "https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m)" -o $HOME/docker-compose'
            sh 'chmod +x $HOME/docker-compose'
            sh "$HOME/docker-compose up -d"
        }
        echo 'Running...'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
